<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fashion Inspiration</title>
    <style>
        /* Styling for Fashion Section */
        #fashion-gallery {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
        }

        #fashion-gallery div {
            text-align: center;
            max-width: 300px;
        }

        #fashion-gallery img {
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 100%;
        }

        button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>Fashion Inspiration</h1>

    <!-- Fashion Section -->
    <section id="fashion">
        <h2>Explore Latest Fashion Trends</h2>
        <button onclick="fetchFashion()">Load Fashion Data</button>
        <div id="fashion-gallery">Click the button to load fashion inspiration.</div>
    </section>

    <script>
        // Fetch fashion data from the GitHub-hosted API
        function fetchFashion() {
            const fashionApi = "https://your-username.github.io/fashion-api/fashion.json"; // Replace with your GitHub Pages URL

            fetch(fashionApi)
                .then(response => response.json())
                .then(data => {
                    const gallery = document.getElementById("fashion-gallery");
                    let content = "";
                    data.forEach(item => {
                        content += `
                            <div>
                                <h3>${item.title}</h3>
                                <p>${item.description}</p>
                                <img src="${item.image}" alt="${item.title}">
                            </div>
                        `;
                    });
                    gallery.innerHTML = content;
                })
                .catch(error => {
                    console.error("Error fetching fashion data:", error);
                    document.getElementById("fashion-gallery").innerHTML = "Failed to load fashion data.";
                });
        }
    </script>
</body>
</html>
